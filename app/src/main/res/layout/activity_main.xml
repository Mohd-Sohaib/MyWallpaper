<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#C7E9ED">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_search"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023">

      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <EditText
              android:id="@+id/search_text"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@null"
              android:layout_weight="1"
              android:paddingStart="20dp"
              android:paddingEnd="1dp"
              android:autofillHints="@null"
              android:hint="Search 'Flower'"
              android:inputType="textAutoComplete"
              tools:ignore="HardcodedText,LabelFor" />

          <ImageView
              android:id="@+id/search_icon"
              android:layout_width="40dp"
              android:layout_height="match_parent"
              android:layout_gravity="end"
              android:src="@drawable/search"
              android:layout_marginEnd="8dp"
              android:contentDescription="@string/cookies" />

      </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:id="@+id/scrollable"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_search"
        app:layout_constraintVertical_bias="0.0"
        android:contentDescription="@string/cookies"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/landscape"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/landscape_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="Landscape"
                    android:fontFamily="serif"
                    tools:ignore="HardcodedText" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cricket"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/cricket_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="Cricket"
                    android:fontFamily="serif"
                    tools:ignore="HardcodedText" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/workout"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/workout_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Workout"
                    android:fontFamily="serif"
                    tools:ignore="HardcodedText" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/students"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/students_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="Students"
                    android:fontFamily="serif"
                    tools:ignore="HardcodedText" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/healthcare"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/healthcare_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Healthcare"
                    android:fontFamily="serif"
                    tools:ignore="HardcodedText" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wallpaperRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollable"
        tools:listitem="@layout/item_wallpaper" />


</androidx.constraintlayout.widget.ConstraintLayout>